{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",         
    "baseUrl": ".",
    "noEmit": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "target": "esnext"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "build"]
}
